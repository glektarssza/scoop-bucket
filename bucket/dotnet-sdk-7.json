{
    "version": "7.0.410",
    "description": ".NET is a free, cross-platform, open source developer platform for building many different types of applications.",
    "homepage": "https://www.microsoft.com/net/",
    "license": "MIT",
    "suggest": {
        "vcredist": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://dotnetcli.azureedge.net/dotnet/Sdk/7.0.410/dotnet-sdk-7.0.410-win-x64.zip",
            "hash": "sha512:bfaf5a3da6c8cdc7e82c7ad86ed1282ed050b689e02a65c32c57aa64292283bca710b2f1fe1bab62ab7b9bfe126fbab27fa4d2c59f9f96f4b32698b06b46dde7"
        },
        "32bit": {
            "url": "https://dotnetcli.azureedge.net/dotnet/Sdk/7.0.410/dotnet-sdk-7.0.410-win-x86.zip",
            "hash": "sha512:99649796ced7e9b6f202c41cf854034f92dd6af8df018c58efe1b44d34a4273e77153b00b32cc1073893b2064e8d4dd49679fe9f0709aac8d60588039a2fd4df"
        },
        "arm64": {
            "url": "https://dotnetcli.azureedge.net/dotnet/Sdk/7.0.410/dotnet-sdk-7.0.410-win-arm64.zip",
            "hash": "sha512:ed7622ee612b02bc2e857aded7a01545ecb9b1a6dd647cfc91972882acaa2472b0fe87432a31b9f6d80f8d556097e0f3b6834e4b803a2a58c18c59b1ada2a14c"
        }
    },
    "installer": {
        "script": [
            "info \"Check if shared SDK directory already exists...\"",
            "if (-not (Test-Path -Path \"$env:APPDATA/dotnet-sdks\")) {",
            "info \"Shared SDKs path does not exist, creating...\"",
            "New-Item -Type Directory -Path \"$env:APPDATA/dotnet-sdks\"",
            "}",
            "info \"Moving current SDK to shared path...\"",
            "Move-Item -Path \"$dir/sdk/$version\" -Destination \"$env:APPDATA/dotnet-sdks/\"",
            "Remove-Item -Recurse -Path \"$dir/sdk/\"",
            "info \"Linking shared SDK directory to scoop app path...\"",
            "warn \"This might fail if you can't create symbolic links!\"",
            "New-Item -Type SymbolicLink -Path \"$dir/sdk/\" -Target \"$env:APPDATA/dotnet-sdks/\"",
            "return $true"
        ]
    },
    "uninstaller": {
        "script": [
            "if (-not (Test-Path -Path \"$env:APPDATA/dotnet-sdks\")) {info \"Shared SDKs path does not exist, nothing to do!\"; return $true;}",
            "info \"Removing our SDK from the shared SDK folder...\";",
            "Remove-Item -Recurse -Path \"$env:APPDATA/dotnet-sdks/$version/",
            "if ((Get-ChildItem -Path \"$env:APPDATA/dotnet-sdks/\" | Measure-Object).Count -eq 0) {",
            "info \"Shared SDK path in `\\\"$env:APPDATA/dotnet-sdks/...`\\\" is empty, deleting...",
            "Remove-Item -Recurse -Force -Path \"$env:APPDATA/dotnet-sdks\"",
            "}"
        ]
    },
    "pre_uninstall": "info 'If the uninstall fails with a message saying that access is denied, you may need to log out of your current account, log back in and try again.'",
    "checkver": {
        "url": "https://dotnetcli.blob.core.windows.net/dotnet/release-metadata/releases-index.json",
        "jsonpath": "$..releases-index[?(@.channel-version == '7.0')].latest-sdk",
        "regex": "([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://dotnetcli.azureedge.net/dotnet/Sdk/$version/dotnet-sdk-$version-win-x64.zip"
            },
            "32bit": {
                "url": "https://dotnetcli.azureedge.net/dotnet/Sdk/$version/dotnet-sdk-$version-win-x86.zip"
            },
            "arm64": {
                "url": "https://dotnetcli.azureedge.net/dotnet/Sdk/$version/dotnet-sdk-$version-win-arm64.zip"
            }
        },
        "hash": {
            "url": "https://dotnetcli.blob.core.windows.net/dotnet/release-metadata/$majorVersion.$minorVersion/releases.json",
            "regex": "(?s)$basename.*?$sha512"
        }
    }
}
